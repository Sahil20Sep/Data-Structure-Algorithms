secodn go through all event nodes temp -> next -> next // n/ 2

then do data replacement 

timme 2n
space n

class Solution {
public:
    ListNode* oddEvenList(ListNode* head) {
        if(head == NULL){
            return NULL;
        }
        vector<int> data;
        ListNode* temp = head;
        while(temp && temp -> next){
            data.push_back(temp -> val);
            temp = temp -> next -> next;
        }
        if(temp){
            data.push_back(temp -> val);
        }
        temp = head -> next;
        while(temp && temp -> next){
            data.push_back(temp -> val);
            temp = temp -> next -> next;
        }
        if(temp){
            data.push_back(temp -> val);
        }
        temp = head;
        int i = 0;
        while(temp){
            temp -> val = data[i++];
            temp = temp -> next;
        }
        return head;
    }
};

-----optimized

class Solution {
public:
    ListNode* oddEvenList(ListNode* head) {
        if(head == NULL || head -> next == NULL){
            return head;
        }
        ListNode* odd = head;
        ListNode* even = head -> next;
        ListNode* evenHead = head -> next;
        while(even && even -> next){
            odd -> next = odd -> next -> next;
            even -> next = even -> next -> next;
            odd = odd -> next;
            even = even -> next;
        }
        odd -> next = evenHead;
        return head;
    }
};

time is n/2
space 1;

