vector<int> topoSort(int n, vector<int> adj[]) 
	{
	    vector<int> ans, indegree(n, 0);
	    for(int i = 0; i < n; i++){
	        for(auto it : adj[i]){
	            indegree[it]++;
	        }
	    }
	    queue<int> Q;
	    for(int i = 0; i < n; i++){
	        if(indegree[i] == 0){
	            Q.push(i);
	        }
	    }
	    while(Q.size()){
	        auto f = Q.front();
	        Q.pop();
	        ans.push_back(f);
	        for(auto child : adj[f]){
	            indegree[child]--;
	            if(indegree[child] == 0){
	                Q.push(child);
	            }
	        }
	    }
	    return ans;
