-----set (to save time, erase redudent pair 

class Solution
{
	public:

    vector<int> dijkstra(int n, vector<vector<int>> adj[], int src)
    {
        vector<int> dist(n, 1e9);
        dist[src] = 0;
        set<pair<int, int>> ms;
        ms.insert({0, src});
        while(ms.size()){
            auto f= *ms.begin();
            ms.erase(ms.begin());
            int d = f.first;
            int node = f.second;
            for(auto it : adj[node]){
                int wt = it[1];
                int child = it[0];
                if(wt + d < dist[child]){
                    if(dist[child] != 1e9){
                        ms.erase({dist[child], child});
                    }
                    dist[child] = d + wt;
                    ms.insert({dist[child], child});
                }
            }
        }
        return dist;
    }
};

