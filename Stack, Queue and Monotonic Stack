----------------------------------------------------------------------------------------------

                    infixx to postfix (take i , ans , stack)

class Solution {
  public:
  
    int priority(char x){
        if(x == '^'){
            return 3;
        }else if(x == '*' || x == '/'){
            return 2;
        }else if(x == '+' || x == '-'){
            return 1;
        }else{
            return 0;
        }
    }
  
    string infixToPostfix(string s) {
        int i = 0, n = s.size();
        string ans = "";
        stack<char> st;
        while(i < n){
            if((s[i] >= 'A' && s[i] <= 'Z') || (s[i] >= 'a' && s[i] <= 'z') || (s[i] >= '0' && s[i] <= '9')){
                ans += s[i];
            }else if(s[i] == '('){
                st.push(s[i]);
            }else if(s[i] == ')'){
                while(st.size() && st.top() != '('){
                    ans += st.top();
                    st.pop();
                }
                st.pop();
            }else{
                while(st.size() && priority(s[i]) <= priority(st.top())){
                    ans += st.top();
                    st.pop();
                }
                st.push(s[i]);
            }
            i++;
        }
        while(st.size()){
            ans += st.top();
            st.pop();
        }
        return ans;
    }
};

