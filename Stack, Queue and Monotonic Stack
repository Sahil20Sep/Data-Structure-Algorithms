                              (next greater element II)

class Solution {
public:
    vector<int> nextGreaterElements(vector<int>& arr) {

        int n = arr.size();

        vector<int> ans(n, -1);

        stack<int> st;

        for(int i = (n << 1) - 1; i >= 0; i--){

            while(!st.empty() && st.top() <= arr[i % n]){

                st.pop();

            }

            if(!st.empty()){

                ans[i % n] = st.top();

            }

            st.push(arr[i % n]);

        }

        return ans;

    }
};

