                              (check for valid paretheess)

class Solution {
public:
    bool isValid(string s) {
        stack<char> st;
        int n = s.size();
        if(n & 1){
            return false;
        }
        for(auto it : s){
            if(it == '{' || it == '[' || it == '('){
                st.push(it);
            }else{
                if(st.empty()){
                    return false;
                }
                char c = st.top();
                if((c == '{' && it == '}') || (c == '(' && it == ')') || (c == '[' && it == ']')){
                    st.pop();
                }else{
                    return false;
                }
            }
        }
        return st.empty() ? true : false;
    }
};

-------------------------------------------------------------------------------------------------------

                              (next greater element I --> monotonic stack)

class Solution {
public:
    vector<int> nextGreaterElement(vector<int>& a, vector<int>& b) {
        
        stack<int> st;

        map<int, int> hash;

        for(int i = 0; i < b.size(); i++){

            hash[b[i]] = i;

        }

        int n = b.size();

        vector<int> ans(n, -1);

        for(int i = n - 1; i >= 0; i--){

            while(!st.empty() && st.top() < b[i]){

                st.pop();

            }

            if(!st.empty()){

                ans[i] = st.top();

            }

            st.push(b[i]);

        }

        vector<int> fi;

        for(int i = 0; i < a.size(); i++){

            fi.push_back(ans[hash[a[i]]]);

        }

        return fi;
    }
};

